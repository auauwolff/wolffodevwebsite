---
interface Props {
  title: string;
}

const { title } = Astro.props;
import { SEO } from "astro-seo";
---

<html lang="en" class="scroll-smooth">
  <head>
    <SEO
      title="duI.T."
      description="duI.T solutions: Transform your business with our comprehensive range of cutting-edge technology services, including web development, mobile app development, software solutions, and IT consulting, leveraging advanced technologies like artificial intelligence, cloud computing, and data analytics, to enhance efficiency, boost organic traffic, and increase conversions."
      extend={{
        // extending the default link tags
        link: [{ rel: "icon", href: "/favicon.ico" }],
        // extending the default meta tags
        meta: [
          {
            name: "description",
            content:
              "Transform your business with duI.T solutions' comprehensive range of cutting-edge technology services, including web development, mobile app development, software solutions, and IT consulting.",
          },
          {
            name: "keywords",
            content:
              "duI.T solutions, technology services, web development, mobile app development, software solutions, IT consulting",
          },
          { name: "robots", content: "index, follow" },
        ],
      }}
    />
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="w-full">
    <slot />
  </body>
</html>
