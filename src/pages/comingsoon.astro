---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="duI.T.">
  <div
    class="relative h-screen w-full flex items-center justify-center bg-cover bg-center text-center px-5 bg-black"
  >
    <div class="absolute top-0 right-0 bottom-0 left-0 bg-gray-900 opacity-75">
    </div>

    <div class="z-50 flex flex-col justify-center text-white w-full h-screen">
      <h1 class="text-4xl lg:text-5xl">We are <b>Almost</b> there!</h1>
      <p>Stay tuned for something amazing!!!</p>

      <div class="mt-10 mb-5">
        <div class="shadow w-full bg-white mt-2 max-w-2xl mx-auto rounded-full">
          <div
            class="rounded-full bg-primary text-xs leading-none text-center text-white py-1"
            style="width: 75%"
          >
            75%
          </div>
        </div>
        <a href="/" class="btn btn-primary w-40 mt-20">Go Back</a>
      </div>
    </div>
  </div>
</MainLayout>
